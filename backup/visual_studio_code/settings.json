{
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-v>": false,
        "<C-a>": false,
        "<C-f>": false
    },
    "macros": {
        "commentDown": [
            "editor.action.commentLine",
            "cursorDown"
        ]
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass"
            ]
        }
    },
    "editor.fontLigatures": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#ffae0063"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.bracketPairColorization.enabled": true,
    "editor.renderWhitespace": "none",
    "editor.insertSpaces": false,
    "editor.wordWrap": "off",
    "editor.accessibilitySupport": "off",
    "editor.foldingImportsByDefault": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.guides.highlightActiveBracketPair": false,
    "editor.guides.indentation": false,
    "editor.hover.delay": 1000,
    "editor.linkedEditing": true,
    "editor.matchBrackets": "near",
    "editor.mouseWheelZoom": true,
    "editor.renderLineHighlight": "none",
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.scrollbar.verticalScrollbarSize": 20,
    "editor.smoothScrolling": true,
    "editor.unfoldOnClickAfterEndOfLine": false,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": false,
    "editor.cursorSurroundingLines": 10,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontWeight": "400",
    "editor.lineHeight": "1.4",
    "editor.suggest.insertMode": "replace",
    "editor.suggest.localityBonus": true,
    "files.eol": "\n",
    "workbench.commandPalette.history": 1000,
    "workbench.statusBar.visible": false,
    "workbench.tips.enabled": false,
    "breadcrumbs.enabled": false,
    "workbench.editor.revealIfOpen": true,
    "debug.showBreakpointsInOverviewRuler": true,
    "code-runner.clearPreviousOutput": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.enableTrash": false,
    "vim.useSystemClipboard": true,
    "git.autofetch": true,
    "explorer.confirmDragAndDrop": false,
    "vim.hlsearch": true,
    "editor.quickSuggestionsDelay": 0,
    "todo-tree.tree.scanMode": "workspace",
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "text-and-comment",
        "foreground": "black",
        "background": "white",
        "opacity": 50,
        "iconColour": "blue",
        "gutterIcon": true,
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "report",
            "foreground": "white",
            "background": "green",
            "iconColour": "green",
        },
        "NOTE": {
            "icon": "note",
            "foreground": "white",
            "background": "gray",
            "iconColour": "gray",
        },
        "COMMENT": {
            "icon": "note",
            "foreground": "white",
            "background": "gray",
            "iconColour": "gray",
        },
        "FIXME": {
            "foreground": "black",
            "background": "yellow",
            "iconColour": "yellow",
        },
        "BUG": {
            "foreground": "white",
            "background": "red",
            "iconColour": "red",
        },
        "[ ]": {
            "icon": "check",
            "foreground": "black",
            "background": "yellow",
            "iconColour": "yellow",
        },
        "[x]": {
            "icon": "check",
            "foreground": "white",
            "background": "green",
            "iconColour": "green",
        }
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "NOTE",
        "COMMENT",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS).*(\\n\\s*//\\s{2,}.*)*",
    "todo-tree.general.enableFileWatcher": true,
    "todo-tree.tree.disableCompactFolders": true,
    "explorer.compactFolders": false,
    "workbench.tree.indent": 20,
    "git.confirmSync": false,
    "vscode-office.openOutline": false,
    "git.enableSmartCommit": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "vim.foldfix": true,
    "tabnine.experimentalAutoImports": true,
    "debug.terminal.clearBeforeReusing": true,
    "explorer.openEditors.visible": 0,
    "workbench.editor.limit.value": 4,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.colorTheme": "Monokai",
    "editor.tabSize": 2,
    "explorer.confirmDelete": false,
    "editor.wordWrapColumn": 40,
    "terminal.integrated.fontFamily": "monospace",
    "editor.scrollbar.vertical": "visible",
    "cmake.configureOnOpen": true,
    "C_Cpp.clang_format_style": "{BasedOnStyle: WebKit, IndentCaseLabels: true, BreakBeforeBraces: Custom, AllowShortEnumsOnASingleLine: true, AllowShortCaseLabelsOnASingleLine: true,  AllowShortLoopsOnASingleLine: true, BraceWrapping: { AfterFunction: false}, AllowShortIfStatementsOnASingleLine: true, IndentWidth: 2, ColumnLimit: 0, Cpp11BracedListStyle: false, PointerAlignment: Left}",
}
